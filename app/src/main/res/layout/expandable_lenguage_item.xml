<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_lenguage"
        style="@style/Widget.LetMeDoIt.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lenguage"
        app:layout_constraintStart_toStartOf="@+id/linear_layout_lenguage"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_layout_lenguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/arrowLenguage"
            android:layout_width="@dimen/arrow_profile_dimens"
            android:layout_height="@dimen/arrow_profile_dimens"
            android:contentDescription="@string/txt_show_languages"
            android:rotation="90"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>