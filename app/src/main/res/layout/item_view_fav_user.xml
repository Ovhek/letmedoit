<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="@dimen/item_cateogry_admin_cardCornesRadius"
    app:cardElevation="@dimen/item_category_admin_cardElevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/img_fa_user_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/adminCategory_gridItem_imt_marginTop"
            android:background="@drawable/profile_icon"
            android:backgroundTint="@color/secundario_gris"
            />
        <TextView
            android:id="@+id/txt_user_name"
            style="@style/Widget.LetMeDoIt.title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/txt_username"
            android:textSize="@dimen/dieciseis_dp" />

        <TextView
            android:id="@+id/txt_description"
            style="@style/Widget.LetMeDoIt.subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/description"
            android:textSize="@dimen/dieciseis_dp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>