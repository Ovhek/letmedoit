<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".opcionesDeCuenta">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/padding_vertical_cl">


        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="@dimen/profile_options_dimens"
            android:layout_height="@dimen/profile_options_dimens"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/arrowProfile"
            android:layout_width="@dimen/arrow_profile_dimens"
            android:layout_height="@dimen/arrow_profile_dimens"
            android:layout_marginEnd="@dimen/margins_start_end"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintBottom_toBottomOf="@+id/imageUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameSurname"
            style="@style/Widget.LetMeDoIt.title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margins_start_end"
            android:text="@string/name_surname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageUser" />

        <RatingBar
            android:id="@+id/ratingBar3"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:theme="@style/RatingBar.Style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameSurname" />

        <View
            android:id="@+id/viewTopUser"
            style="@style/Divider"
            android:layout_marginTop="@dimen/divider_16dp_margin_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/viewTopUser">

            <!-- Edit Profile !-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/editProfile"
                    style="@style/Widget.LetMeDoIt.text"
                    android:layout_marginTop="@dimen/opciones_cuenta_margin_top_bot_intolayouts"
                    android:layout_marginBottom="@dimen/opciones_cuenta_margin_top_bot_intolayouts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/arrowEditProfile"
                        android:layout_width="@dimen/arrow_profile_dimens"
                        android:layout_height="@dimen/arrow_profile_dimens"

                        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                </LinearLayout>
            </LinearLayout>
            <!-- Divider !-->

            <View
                android:id="@+id/divider_editProfile_lenguage"
                style="@style/Divider"
                android:layout_height="2sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar3" />

            <!-- Apartado lenguage !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lenguage"
                    style="@style/Widget.LetMeDoIt.text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/opciones_cuenta_margin_top_bot_intolayouts"
                    android:layout_marginBottom="@dimen/opciones_cuenta_margin_top_bot_intolayouts"
                    android:text="@string/lenguage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/arrowLenguage"
                        android:layout_width="@dimen/arrow_profile_dimens"
                        android:layout_height="@dimen/arrow_profile_dimens"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                </LinearLayout>
            </LinearLayout>
            <!-- Divider !-->

            <View
                android:id="@+id/divider_lenguage_darkTheme"
                style="@style/Divider"
                android:layout_height="2sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar3" />

            <!-- Apartado Dark Theme !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/darkTheme"
                    style="@style/Widget.LetMeDoIt.text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/opciones_cuenta_margin_top_bot_intolayouts"
                    android:layout_marginBottom="@dimen/opciones_cuenta_margin_top_bot_intolayouts"
                    android:text="@string/dark_theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switchDarkTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider !-->
            <View
                android:id="@+id/divider_darkTheme_signOff"
                style="@style/Divider"
                android:layout_height="2sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar3" />

            <!-- Apartado Sign Off !-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/signOff"
                    style="@style/Widget.LetMeDoIt.text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/opciones_cuenta_margin_top_bot_intolayouts"
                    android:layout_marginBottom="@dimen/opciones_cuenta_margin_top_bot_intolayouts"
                    android:text="@string/sign_off" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/arrowSignOff"
                        android:layout_width="@dimen/arrow_profile_dimens"
                        android:layout_height="@dimen/arrow_profile_dimens"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider !-->
            <View
                android:id="@+id/divider_signOff"
                style="@style/Divider"
                android:layout_height="2sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar3" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>