<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deals"
            android:layout_marginTop="@dimen/padding_vertical_start_end_8"
            android:translationZ="@dimen/padding_vertical_start_end_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/chats_or_deals_divider"
            style="@style/Divider"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chats_or_deals" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/chats_or_deals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/chats_or_deals_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="40dp"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/principal_blanco"

            app:tabTextColor="@color/negro" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>