<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/tablet_card_template_height"
    android:layout_height="400dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="@dimen/item_cateogry_admin_cardCornesRadius"
    app:cardElevation="@dimen/item_category_admin_cardElevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/favUserLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/logo_dimen"
            android:layout_height="@dimen/logo_dimen"
            android:layout_marginTop="@dimen/padding_vertical_start_end_8"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_fa_user_profile"
                android:layout_width="@dimen/logo_dimen"
                android:layout_height="@dimen/logo_dimen"
                android:layout_gravity="center"
                android:backgroundTint="@color/secundario_gris"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_user_name"
            style="@style/Widget.LetMeDoIt.title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/txt_username"
            android:textSize="@dimen/tablet_textInput_text" />

        <TextView
            android:id="@+id/userFav"
            style="@style/IconoClickable"
            android:layout_width="@dimen/marginTop_extra_big"
            android:layout_height="@dimen/marginTop_extra_big"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginEnd="@dimen/padding_vertical_start_end_8"
            android:background="@drawable/ic_round_favorite_24"
            android:layout_gravity="end"
            />

    </LinearLayout>


</androidx.cardview.widget.CardView>