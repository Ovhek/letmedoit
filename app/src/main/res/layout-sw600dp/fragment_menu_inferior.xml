<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.general.fragments.Menu_Inferior">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <View
                android:id="@+id/divider_menu"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/up_shadow"
                app:layout_constraintBottom_toTopOf="@+id/menu_inferior"
                app:layout_constraintEnd_toEndOf="@+id/menu_inferior"
                app:layout_constraintStart_toStartOf="@+id/menu_inferior" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu_inferior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemIconSize="24dp"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_principal"></com.google.android.material.bottomnavigation.BottomNavigationView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>