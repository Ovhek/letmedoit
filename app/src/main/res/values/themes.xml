<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetMeDoIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_marino</item>
        <item name="colorPrimaryVariant">@color/azul_marino</item>
        <item name="colorOnPrimary">@color/principal_blanco</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundario_gris</item>
        <item name="colorSecondaryVariant">@color/secundario_gris</item>
        <item name="colorOnSecondary">@color/negro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:button">@style/Widget.LetMeDoIT.principalButton</item>

        <item name="android:textViewStyle">@style/Widget.LetMeDoIt.title1</item>

        <item name="textInputStyle">@style/Widget.LetMeDoIt.TextInputLayout</item>

        <item name="checkboxStyle">@style/Widget.LetMeDoIt.CheckBox</item>

        <item name="android:spinnerStyle">@style/Widget.LetMeDoIt.CustomSpinner</item>

    </style>

    <style name="Theme.LetMeDoIt.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.LetMeDoIt.AppWidgetContainer" parent="Theme.LetMeDoIt.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>