<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetMeDoIt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_marino</item>
        <item name="colorPrimaryVariant">@color/azul_marino</item>
        <item name="colorOnPrimary">@color/principal_blanco</item>
        <item name="android:textAllCaps">false</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundario_gris</item>
        <item name="colorSecondaryVariant">@color/secundario_gris</item>
        <item name="colorOnSecondary">@color/negro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/Widget.LetMeDoIT.principalButton</item>

        <item name="android:textViewStyle">@style/Widget.LetMeDoIt.title1</item>

        <item name="textInputStyle">@style/Widget.LetMeDoIt.TextInputLayout</item>



        <item name="checkboxStyle">@style/Widget.LetMeDoIt.CheckBox</item>

        <item name="android:spinnerStyle">@style/Widget.LetMeDoIt.CustomSpinner</item>

        <item name="textAllCaps">false</item>
    </style>
</resources>