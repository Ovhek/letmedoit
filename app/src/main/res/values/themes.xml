<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetMeDoIt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_marino</item>
        <item name="colorPrimaryVariant">@color/azul_marino</item>
        <item name="colorOnPrimary">@color/principal_blanco</item>
        <item name="android:textAllCaps">false</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundario_gris</item>
        <item name="colorSecondaryVariant">@color/secundario_gris</item>
        <item name="colorOnSecondary">@color/negro</item>

        <!-- <item name="android:searchViewStyle">@style/Widget.LetMeDoIt.SearchBar</item> -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Widget.LetMeDoIT.principalButton</item>

        <item name="android:textViewStyle">@style/Widget.LetMeDoIt.title1</item>

        <item name="textInputStyle">@style/Widget.LetMeDoIt.TextInputLayout</item>

        <item name="checkboxStyle">@style/Widget.LetMeDoIt.CheckBox</item>

        <item name="spinnerStyle">@style/Widget.LetMeDoIt.CustomSpinner</item>

        <item name="textAllCaps">false</item>

        <item name="ratingBarStyle">@style/RatingBar.Style</item>

    </style>
    <!-- Tema de inicialización de la aplicación -->
    <style name="Theme.LetMeDoIt.Starting" parent ="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/azul_marino</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:animationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.LetMeDoIt</item>
    </style>



</resources>